---
import '@fontsource-variable/open-sans';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description, keywords } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />

  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description || "Carlos 'El Pibe' Valderrama - Leyenda del fútbol colombiano, embajador de marca profesional con 3.5M+ seguidores. Contrata al ícono más auténtico de Colombia para tu campaña publicitaria."} />
  <meta name="keywords" content={keywords || "Pibe Valderrama, Carlos Valderrama, embajador de marca, influencer marketing, fútbol colombiano, leyenda del fútbol, publicidad deportiva, marketing digital Colombia, celebridad deportiva, contratación deportistas"} />
  <meta name="author" content="Carlos Valderrama" />
  <meta name="robots" content="index, follow, max-image-preview:large" />
  <link rel="canonical" href="https://pibevalderrama.com" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://pibevalderrama.com" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description || "Carlos 'El Pibe' Valderrama - Leyenda del fútbol colombiano disponible para colaboraciones comerciales. 3.5M+ seguidores activos."} />
  <meta property="og:image" content="https://pibevalderrama.com/og-image.jpg" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:site_name" content="Pibe Valderrama Official" />
  <meta property="og:locale" content="es_CO" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content="https://pibevalderrama.com" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description || "El Pibe Valderrama - Leyenda colombiana disponible para tu marca. Autenticidad y alcance garantizados."} />
  <meta name="twitter:image" content="https://pibevalderrama.com/twitter-image.jpg" />
  <meta name="twitter:creator" content="@PibeValderrama" />

  <!-- WhatsApp -->
  <meta property="og:image:alt" content="Carlos Valderrama - El Pibe - Embajador de Marca" />

  <!-- Schema.org structured data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Carlos Valderrama",
      "alternateName": "El Pibe Valderrama",
      "description": "Leyenda del fútbol colombiano, embajador de marca profesional",
      "url": "https://pibevalderrama.com",
      "image": "https://pibevalderrama.com/pibe-valderrama.jpg",
      "sameAs": [
        "https://www.instagram.com/pibevalderramap/",
        "https://www.facebook.com/pibevalderramatv",
        "https://www.youtube.com/@pibevalderramap",
        "https://www.tiktok.com/@pibevalderramap"
      ],
      "jobTitle": "Embajador de Marca",
      "worksFor": {
        "@type": "Organization",
        "name": "Pibe Valderrama Oficial"
      },
      "nationality": "Colombian",
      "birthPlace": "Santa Marta, Colombia",
      "knowsAbout": ["Fútbol", "Marketing Deportivo", "Entretenimiento"],
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+57-315-429-0215",
        "contactType": "Negocios",
        "email": "negocios@pibevalderrama.com"
      }
    }
  </script>

  <!-- Favicon and Icons -->
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="msapplication-TileColor" content="#FCDD09" />
  <meta name="theme-color" content="#FCDD09" />

  <!-- Preconnects for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="preconnect" href="https://www.instagram.com" />
  <link rel="preconnect" href="https://www.facebook.com" />
  <link rel="preconnect" href="https://wa.me" />

  <!-- DNS Prefetch -->
  <link rel="dns-prefetch" href="//fonts.googleapis.com" />
  <link rel="dns-prefetch" href="//www.google-analytics.com" />

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Oswald:wght@400;500;600;700&family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <!-- Additional SEO -->
  <meta name="format-detection" content="telephone=no" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />

  <style>
    html {
      scroll-behavior: smooth;
    }

    /* Performance optimizations */
    img {
      content-visibility: auto;
    }

    /* Reduce CLS */
    .container {
      contain: layout style paint;
    }
  </style>
</head>
<body>
  <slot />
</body>
</html>