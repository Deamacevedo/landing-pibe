<script>
// Fallback script embebido para mÃ³viles
document.addEventListener('DOMContentLoaded', function() {
  // Verificar si estamos en mÃ³vil
  const isMobile = window.innerWidth <= 768;

  if (isMobile) {
    console.log('Modo mÃ³vil detectado - activando fallback');

    // Activar animaciones despuÃ©s de 2 segundos en mÃ³viles
    setTimeout(() => {
      const section = document.querySelector('#estadisticas-section');
      if (section) {
        const rect = section.getBoundingClientRect();
        const isVisible = rect.top < window.innerHeight && rect.bottom > 0;

        if (isVisible) {
          console.log('SecciÃ³n visible en mÃ³vil - forzando animaciones');
          // Forzar valores finales si las animaciones no se ejecutaron
          const counters = document.querySelectorAll('.counter-number');
          const percentages = document.querySelectorAll('.percentage-counter');
          const progressBars = document.querySelectorAll('.progress-bar');

          counters.forEach(counter => {
            if (counter.textContent === '0' || counter.textContent === '') {
              const target = parseFloat(counter.dataset.target);
              if (target >= 1000000) {
                counter.textContent = (target / 1000000).toFixed(1) + 'M+';
              } else if (target >= 1000) {
                counter.textContent = (target / 1000).toFixed(0) + 'K';
              } else {
                counter.textContent = target.toString();
              }
            }
          });

          percentages.forEach(percentage => {
            if (percentage.textContent === '0%' || percentage.textContent === '') {
              const target = parseInt(percentage.dataset.target);
              percentage.textContent = target + '%';
            }
          });

          progressBars.forEach(bar => {
            if (bar.style.width === '0%' || bar.style.width === '') {
              const width = parseInt(bar.dataset.width);
              bar.style.width = width + '%';
            }
          });
        }
      }
    }, 2000);
  }
});
