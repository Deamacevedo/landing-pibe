<style>
  /* Configuración del carrusel */
  .carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .carousel-track {
    width: max-content;
    animation-play-state: running;
  }

  /* Estilos para las marcas */
  .brand-item {
    min-width: 200px;
    max-width: 280px;
  }

  .brand-logo {
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border: 1px solid rgba(0, 0, 0, 0.05);
    backdrop-filter: blur(10px);
  }

  .hover-brand:hover {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    border-color: rgba(252, 221, 9, 0.3);
  }

  .hover-brand:hover .logo-placeholder {
    filter: brightness(1.1) contrast(1.1);
  }

  /* Estados iniciales para animación de entrada */
  .brand-item {
    opacity: 0;
    transform: translateY(30px) scale(0.9);
  }

  /* Efectos de gradiente suave */
  .carousel-container::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 100px;
    background: linear-gradient(to right, rgba(249, 250, 251, 1), transparent);
    z-index: 10;
    pointer-events: none;
  }

  .carousel-container::after {
    content: '';
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100px;
    background: linear-gradient(to left, rgba(249, 250, 251, 1), transparent);
    z-index: 10;
    pointer-events: none;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .brand-item {
      min-width: 160px;
      max-width: 200px;
      margin: 0 1rem;
    }

    .brand-logo {
      padding: 1.5rem;
    }

    .logo-placeholder {
      height: 3rem;
    }

    .hover-brand:hover {
      transform: translateY(-4px) scale(1.02);
    }
  }

  @media (max-width: 480px) {
    .brand-item {
      min-width: 140px;
      max-width: 180px;
      margin: 0 0.75rem;
    }

    .brand-logo {
      padding: 1rem;
    }

    .logo-placeholder {
      height: 2.5rem;
    }
  }

  /* Mejoras de performance */
  .carousel-track,
  .brand-item,
  .brand-logo {
    will-change: transform;
    backface-visibility: hidden;
    perspective: 1000px;
  }

  /* Animaciones suaves de entrada */
  .brand-item.animate-in {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* Pausar animación en hover del contenedor */
  .carousel-container:hover .carousel-track {
    animation-play-state: paused;
  }

  /* Efectos adicionales para logos */
  .logo-placeholder {
    transition: all 0.3s ease;
  }

  .logo-placeholder svg {
    transition: all 0.3s ease;
  }

  .hover-brand:hover .logo-placeholder svg {
    transform: scale(1.1);
  }
</style>

