<style>
  /* Configuración del carrusel */
  .carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .carousel-track {
    width: max-content;
    animation-play-state: running;
  }

  /* Estilos para las marcas */
  .brand-item {
    min-width: 200px;
    max-width: 280px;
  }

  .brand-logo {
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border: 1px solid rgba(0, 0, 0, 0.05);
    backdrop-filter: blur(10px);
  }

  .hover-brand:hover {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    border-color: rgba(252, 221, 9, 0.3);
  }

  .hover-brand:hover .logo-placeholder {
    filter: brightness(1.1) contrast(1.1);
  }

  /* Estados iniciales para animación de entrada */
  .brand-item {
    opacity: 0;
    transform: translateY(30px) scale(0.9);
  }

  /* Efectos de gradiente suave */
  .carousel-container::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 100px;
    background: linear-gradient(to right, rgba(249, 250, 251, 1), transparent);
    z-index: 10;
    pointer-events: none;
  }

  .carousel-container::after {
    content: '';
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100px;
    background: linear-gradient(to left, rgba(249, 250, 251, 1), transparent);
    z-index: 10;
    pointer-events: none;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .brand-item {
      min-width: 160px;
      max-width: 200px;
      margin: 0 1rem;
    }

    .brand-logo {
      padding: 1.5rem;
    }

    .logo-placeholder {
      height: 3rem;
    }

    .hover-brand:hover {
      transform: translateY(-4px) scale(1.02);
    }
  }

  @media (max-width: 480px) {
    .brand-item {
      min-width: 140px;
      max-width: 180px;
      margin: 0 0.75rem;
    }

    .brand-logo {
      padding: 1rem;
    }

    .logo-placeholder {
      height: 2.5rem;
    }
  }

  /* Mejoras de performance */
  .carousel-track,
  .brand-item,
  .brand-logo {
    will-change: transform;
    backface-visibility: hidden;
    perspective: 1000px;
  }

  /* Animaciones suaves de entrada */
  .brand-item.animate-in {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* Pausar animación en hover del contenedor */
  .carousel-container:hover .carousel-track {
    animation-play-state: paused;
  }

  /* Efectos adicionales para logos */
  .logo-placeholder {
    transition: all 0.3s ease;
  }

  .logo-placeholder svg {
    transition: all 0.3s ease;
  }

  .hover-brand:hover .logo-placeholder svg {
    transform: scale(1.1);
  }

  /* FORZAR CLASES DE TAILWIND SOBRE GSAP - MARCAS */
  
  /* Padding classes */
  .px-4 { padding-left: 1rem !important; padding-right: 1rem !important; }
  .py-12 { padding-top: 3rem !important; padding-bottom: 3rem !important; }
  .py-16 { padding-top: 4rem !important; padding-bottom: 4rem !important; }
  .py-8 { padding-top: 2rem !important; padding-bottom: 2rem !important; }
  
  .p-10 { padding: 2.5rem !important; }
  
  /* Margin classes */
  .mb-8 { margin-bottom: 2rem !important; }
  .mb-10 { margin-bottom: 2.5rem !important; }
  .mb-12 { margin-bottom: 3rem !important; }
  .mb-16 { margin-bottom: 4rem !important; }
  .mx-8 { margin-left: 2rem !important; margin-right: 2rem !important; }

  /* Text sizes */
  .text-lg { font-size: 1.125rem !important; line-height: 1.75rem !important; }
  .text-xl { font-size: 1.25rem !important; line-height: 1.75rem !important; }
  .text-2xl { font-size: 1.5rem !important; line-height: 2rem !important; }
  .text-3xl { font-size: 1.875rem !important; line-height: 2.25rem !important; }
  .text-4xl { font-size: 2.25rem !important; line-height: 2.5rem !important; }
  .text-5xl { font-size: 3rem !important; line-height: 1 !important; }
  .text-6xl { font-size: 3.75rem !important; line-height: 1 !important; }
  .text-7xl { font-size: 4.5rem !important; line-height: 1 !important; }
  .text-8xl { font-size: 6rem !important; line-height: 1 !important; }

  /* Border radius */
  .rounded-2xl { border-radius: 1rem !important; }

  /* Width and height */
  .h-20 { height: 5rem !important; }
  .h-24 { height: 6rem !important; }
  .w-auto { width: auto !important; }
  .h-full { height: 100% !important; }

  /* Display classes */
  .flex { display: flex !important; }
  .items-center { align-items: center !important; }
  .justify-center { justify-content: center !important; }
  .flex-col { flex-direction: column !important; }
  .flex-grow { flex-grow: 1 !important; }
  .text-center { text-align: center !important; }
  
  /* Max width classes */
  .max-w-4xl { max-width: 56rem !important; }
  .max-w-5xl { max-width: 64rem !important; }
  .mx-auto { margin-left: auto !important; margin-right: auto !important; }

  /* Responsive Tailwind classes con !important - MARCAS */
  @media (min-width: 768px) {
    .md\\:px-16 { padding-left: 4rem !important; padding-right: 4rem !important; }
    .md\\:text-xl { font-size: 1.25rem !important; line-height: 1.75rem !important; }
    .md\\:text-2xl { font-size: 1.5rem !important; line-height: 2rem !important; }
    .md\\:text-6xl { font-size: 3.75rem !important; line-height: 1 !important; }
    .md\\:text-7xl { font-size: 4.5rem !important; line-height: 1 !important; }
    .lg\\:p-14 { padding: 3.5rem !important; }
    .lg\\:mx-12 { margin-left: 3rem !important; margin-right: 3rem !important; }
    .lg\\:h-24 { height: 6rem !important; }
  }

  @media (min-width: 1024px) {
    .lg\\:text-2xl { font-size: 1.5rem !important; line-height: 2rem !important; }
