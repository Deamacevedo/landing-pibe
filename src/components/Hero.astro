---
// src/components/Hero.astro
import Image from "astro/components/Image.astro"
import Pibe from "../assets/fondoprueba.jpg";
---

<section id="hero" class="relative h-screen w-full overflow-hidden flex items-center justify-center">
  
  <!-- Background Image with Parallax -->
  <div class="hero-bg absolute inset-0 z-0">
    <Image 
      src={Pibe}
      alt="El Pibe Valderrama"
      class="w-full h-full object-cover object-center min-h-screen"
      style="object-position: center center;"
      loading="eager"
      >
    <!-- Overlay gradients -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/60 via-black/30 to-transparent"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-black/20"></div>
  </div>

  <!-- Main Content Container -->
  <div class="hero-content relative z-10 container mx-auto px-4 h-full flex flex-col justify-center">
    
    <!-- Hero Text Content -->
    <div class="hero-text max-w-4xl">
      
      <!-- Pre-title -->
      <div class="hero-pretitle mb-4 overflow-hidden">
        <p class="text-yellow-400 font-medium text-lg md:text-xl tracking-wider uppercase">
          Leyenda del Fútbol Colombiano
        </p>
      </div>

      <!-- Main Title -->
      <div class="hero-title mb-8 overflow-hidden">
        <h1 class="text-white font-oswald font-bold leading-none">
          <span class="block text-5xl md:text-7xl lg:text-8xl xl:text-9xl">EL PIBE</span>
          <span class="block text-4xl md:text-6xl lg:text-7xl xl:text-8xl text-yellow-400 mt-2">VALDERRAMA</span>
        </h1>
      </div>

      <!-- Hero Quote -->
      <div class="hero-quote overflow-hidden">
        <blockquote class="text-white text-xl md:text-2xl lg:text-3xl font-dancing italic max-w-3xl">
          "¡Yo juego con el corazón, y con el pueblo!"
        </blockquote>
      </div>

    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator absolute bottom-6 left-1/2 transform -translate-x-1/2 z-20 cursor-pointer">
    <div class="flex flex-col items-center text-white/80 hover:text-white transition-all duration-300 group">
      <span class="text-sm uppercase tracking-widest mb-4 font-medium opacity-90 group-hover:opacity-100">Scroll para continuar</span>
      <!-- Scroll arrow -->
      <svg class="w-4 h-4 mt-3 animate-bounce opacity-70 group-hover:opacity-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>

  <!-- Floating Elements -->
  <div class="floating-elements absolute inset-0 pointer-events-none z-5">
    <!-- Colombian flag abstract shapes -->
    <div class="floating-shape absolute top-1/4 right-10 w-20 h-20 bg-yellow-400/10 rounded-full blur-2xl"></div>
    <div class="floating-shape absolute bottom-1/3 left-10 w-16 h-16 bg-blue-800/10 rounded-full blur-2xl"></div>
    <div class="floating-shape absolute top-1/2 right-1/4 w-12 h-12 bg-red-600/10 rounded-full blur-2xl"></div>
    
    <!-- Football icons -->
    <div class="floating-icon absolute top-20 left-1/4 text-white/5 text-6xl">⚽</div>
    <div class="floating-icon absolute bottom-40 right-1/3 text-yellow-400/5 text-4xl">⚽</div>
  </div>

  <!-- Colombian flag detail -->
  <div class="absolute top-8 left-8 z-20">
    <div class="w-16 h-10 relative overflow-hidden rounded-md shadow-lg border border-white/20 opacity-60">
      <div class="absolute top-0 left-0 w-full h-5 bg-yellow-400"></div>
      <div class="absolute top-5 left-0 w-full h-2.5 bg-blue-800"></div>
      <div class="absolute bottom-0 left-0 w-full h-2.5 bg-red-600"></div>
    </div>
  </div>

</section>

<style>
  /* Fuentes personalizadas */
  .font-oswald {
    font-family: 'Oswald', sans-serif;
  }

  .font-dancing {
    font-family: 'Dancing Script', cursive;
  }

  /* Hero background parallax */
  .hero-bg {
    transform: translate3d(0, 0, 0);
    will-change: transform;
  }

  /* Scroll indicator animation */
  .scroll-dot {
    animation: scroll-bounce 2s infinite;
  }

  @keyframes scroll-bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(8px);
    }
    60% {
      transform: translateY(4px);
    }
  }

  /* CTA button effects */
  .cta-button {
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(251, 191, 36, 0.3);
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.6s ease;
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(251, 191, 36, 0.4);
  }

  /* Floating elements animations */
  .floating-shape {
    animation: float-gentle 6s ease-in-out infinite;
  }

  .floating-shape:nth-child(2) {
    animation-delay: -2s;
  }

  .floating-shape:nth-child(3) {
    animation-delay: -4s;
  }

  .floating-icon {
    animation: float-gentle 8s ease-in-out infinite;
  }

  .floating-icon:nth-child(2) {
    animation-delay: -3s;
  }

  @keyframes float-gentle {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    25% {
      transform: translateY(-10px) rotate(2deg);
    }
    50% {
      transform: translateY(-20px) rotate(0deg);
    }
    75% {
      transform: translateY(-10px) rotate(-2deg);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-title h1 span:first-child {
      font-size: 3.5rem;
    }
    .hero-title h1 span:last-child {
      font-size: 3rem;
    }
    .hero-quote blockquote {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .hero-title h1 span:first-child {
      font-size: 2.5rem;
    }
    .hero-title h1 span:last-child {
      font-size: 2rem;
    }
    .hero-quote blockquote {
      font-size: 1.125rem;
    }
  }

  /* Colombian colors custom classes */
  .text-colombian-yellow { color: #FCDD09; }
  .text-colombian-blue { color: #003087; }
  .text-colombian-red { color: #CE1126; }
  .bg-colombian-yellow { background-color: #FCDD09; }
  .bg-colombian-blue { background-color: #003087; }
  .bg-colombian-red { background-color: #CE1126; }
</style>

<script src="../scripts/hero.js"></script>