<script>
  // Handle mailto for Mac compatibility in Footer
  document.addEventListener('DOMContentLoaded', () => {
    const footerEmailButton = document.getElementById('footer-email-btn');

    if (footerEmailButton) {
      footerEmailButton.addEventListener('click', (e) => {
        e.preventDefault();

        const email = footerEmailButton.getAttribute('data-email');
        const subject = footerEmailButton.getAttribute('data-subject');
        const body = footerEmailButton.getAttribute('data-body');

        const mailtoLink = `mailto:${email}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;

        try {
          window.location.href = mailtoLink;
        } catch (error) {
          const tempLink = document.createElement('a');
          tempLink.href = mailtoLink;
          tempLink.style.display = 'none';
          document.body.appendChild(tempLink);
          tempLink.click();
          document.body.removeChild(tempLink);
        }
      });
    }
  });
</script>
